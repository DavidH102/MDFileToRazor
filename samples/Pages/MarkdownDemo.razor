@page "/markdown-demo"
@using MDFileToRazor.Components

<PageTitle>Markdown Demo</PageTitle>

<h1>Markdown to Razor Component Demo</h1>

<div style="margin-bottom: 2rem;">
    <h2>Generated Pages</h2>
    <p>These pages were automatically generated from markdown files during build:</p>
    <ul>
        <li><a href="/about">About</a> - Generated from <code>about.md</code></li>
        <li><a href="/getting-started">Getting Started</a> - Generated from <code>getting-started.md</code></li>
        <li><a href="/api-docs">API Documentation</a> - Generated from <code>api-docs.md</code></li>
    </ul>
</div>

<div style="margin-bottom: 2rem;">
    <h2>Example 1: Inline Markdown Content</h2>
    <MarkdownSection Content="@inlineMarkdown" />
</div>

<div style="margin-bottom: 2rem;">
    <h2>Example 2: Load from File</h2>
    <MarkdownSection FromAsset="sample.md" />
</div>

@code
{
    private string inlineMarkdown = @"
